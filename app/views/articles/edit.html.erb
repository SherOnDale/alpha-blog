<h1>Edit existing article</h1>

<% if @article.errors.any? %>
    <h2>The following error(s) prevented the article from getting updated</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li>
                <%= msg %>
            </li>
        <% end %>
    </ul>
<% end %>

<%= render 'form' %>